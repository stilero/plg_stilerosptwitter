        <config>
            <fields name="params" addfieldpath="/plugins/system/stilerosptwitter/elements">
                    <fieldset name="settings" label="PLG_CONTENT_STILEROSPTWITTER_SETTINGS">
                            <field name="custom_field" type="customfieldname" default="" label="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME" description="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME_DESC"/>
                            <field name="param_name" type="text"  default="" label="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME" description="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME_DESC"/>
                            <field name="param_name2" type="radio" default="1" label="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME2" description="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME2_DESC">
