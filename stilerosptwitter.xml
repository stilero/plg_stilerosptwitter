                                    <option value="0">No</option>
                            </field>
                            <field type="spacer" default="PLG_CONTENT_STILEROSPTWITTER_SPACER"/>
                    </fieldset>
                    <fieldset name="other" label="PLG_CONTENT_STILEROSPTWITTER_FIELDSET">
                            <field name="param_name" type="text"  default="" label="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME" description="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME_DESC"/>
                            <field name="param_name2" type="radio" default="1" label="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME2" description="PLG_CONTENT_STILEROSPTWITTER_PARAMNAME2_DESC">
